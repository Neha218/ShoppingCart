<%- include("./_layouts/header") %>
<div class="row products ">
  <% products.forEach((product) => { %>
  <div class="col-xs-12 col-md-4 block">
    <a
      class="productblock"
      href="/products/<%= product.category %>/<%= product.slug %>"
    >
      <img
        class="pimage"
        src="/productImages/<%= product.id %>/<%= product.image %>"
        alt=""
      />
    </a>
    <h3><%= product.title %></h3>
    <h5>Rs. <%= parseFloat(product.price).toFixed(2) %></h5>
    <a href="/products/<%= product.category %>/<%= product.slug %>"
      >View Details</a
    >
  </div>
  <% }) %>
</div>
<%- include("./_layouts/footer") %>
